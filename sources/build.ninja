# instantiateUfo: Create instance UFOs from a Glyphs or designspace file
rule instantiateUfo
  command = /mnt/d/src/fontwork/GurungKhema/venv/bin/python3 -m $
      gftools.builder.jobrunner fontmake -i "$instance_name" -o ufo $
      $fontmake_type $in $args $stamp
  description = instantiateUfo

# buildTTF: Build a TTF from a source file
rule buildTTF
  command = /mnt/d/src/fontwork/GurungKhema/venv/bin/python3 -m $
      gftools.builder.jobrunner fontmake --output-path $out -o ttf $
      $fontmake_type $in $args $stamp
  description = buildTTF

# autohint: Run gftools-autohint
rule autohint
  command = /mnt/d/src/fontwork/GurungKhema/venv/bin/python3 -m $
      gftools.builder.jobrunner gftools-autohint $args -o $out $in $stamp
  description = autohint

# addSubset: Add a subset from another font
rule addSubset
  command = /mnt/d/src/fontwork/GurungKhema/venv/bin/python3 -m $
      gftools.builder.jobrunner gftools-add-ds-subsets $args -j -y $yaml -o $
      $out $in $stamp
  description = addSubset

# fix: Run gftools-fix
rule fix
  command = /mnt/d/src/fontwork/GurungKhema/venv/bin/python3 -m $
      gftools.builder.jobrunner gftools-fix-font -o $out $args $in $stamp
  description = fix

# buildOTF: Build a OTF from a source file
rule buildOTF
  command = /mnt/d/src/fontwork/GurungKhema/venv/bin/python3 -m $
      gftools.builder.jobrunner fontmake --output-path $out -o otf $
      $fontmake_type $in $args $stamp
  description = buildOTF

# copy: Copy a file
rule copy
  command = /mnt/d/src/fontwork/GurungKhema/venv/bin/python3 -m $
      gftools.builder.jobrunner cp $in $out $stamp
  description = copy

# Generating instance_ufos/NotoSansGurungKhema-Regular.ufo.json
build instance_ufos/NotoSansGurungKhema-Regular.ufo.json: instantiateUfo $
    NotoSansGurungKhema.designspace
  operation = instantiateUfo
  instance_name = NotoSansGurungKhema Regular
  fontmake_type = -m
  fontmake_args =  --verbose WARNING 
  args =  --ufo-structure=json --output-dir instance_ufos
# Generating full-designspace/NotoSansGurungKhema.designspace
build full-designspace/NotoSansGurungKhema.designspace: addSubset $
    NotoSansGurungKhema.designspace
  yaml = /tmp/tmpitzo1m5t
  args = --allow-sparse
# Generating
# ../fonts/NotoSansGurungKhema/hinted/ttf/NotoSansGurungKhema-Regular.ttf
build $
    ../fonts/NotoSansGurungKhema/hinted/ttf/NotoSansGurungKhema-Regular.ttf: $
    autohint $
    ../fonts/NotoSansGurungKhema/unhinted/ttf/NotoSansGurungKhema-Regular.ttf
  operation = autohint
  args = --fail-ok --auto-script --discount-latin
# Generating
# ../fonts/NotoSansGurungKhema/googlefonts/ttf/NotoSansGurungKhema-Regular.ttf
build $
    ../fonts/NotoSansGurungKhema/googlefonts/ttf/NotoSansGurungKhema-Regular.ttf: $
    fix ../fonts/NotoSansGurungKhema/full/ttf/NotoSansGurungKhema-Regular.ttf
  operation = fix
  args = --include-source-fixes
# Generating
# ../fonts/NotoSansGurungKhema/unhinted/ttf/NotoSansGurungKhema-Regular.ttf
build $
    ../fonts/NotoSansGurungKhema/unhinted/ttf/NotoSansGurungKhema-Regular.ttf: $
    buildTTF instance_ufos/NotoSansGurungKhema-Regular.ufo.json
  operation = buildTTF
  args = --filter ...  --filter FlattenComponentsFilter --filter $
      DecomposeTransformedComponentsFilter
  fontmake_type = -u
  fontmake_args =  --verbose WARNING 
# Generating
# ../fonts/NotoSansGurungKhema/unhinted/otf/NotoSansGurungKhema-Regular.otf
build $
    ../fonts/NotoSansGurungKhema/unhinted/otf/NotoSansGurungKhema-Regular.otf: $
    buildOTF instance_ufos/NotoSansGurungKhema-Regular.ufo.json
  operation = buildOTF
  args = --filter ...  --filter FlattenComponentsFilter --filter $
      DecomposeTransformedComponentsFilter
  fontmake_type = -u
  fontmake_args =  --verbose WARNING 
# Generating
# full-designspace/instance_ufos/NotoSansGurungKhema-Regular.ufo.json
build full-designspace/instance_ufos/NotoSansGurungKhema-Regular.ufo.json: $
    instantiateUfo full-designspace/NotoSansGurungKhema.designspace
  operation = instantiateUfo
  instance_name = NotoSansGurungKhema Regular
  target = full-designspace/instance_ufos/NotoSansGurungKhema-Regular.ufo.json
  fontmake_type = -m
  fontmake_args =  --verbose WARNING 
  args =  --ufo-structure=json --output-dir full-designspace/instance_ufos
# Generating /tmp/tmpoom2eouz
build /tmp/tmpoom2eouz: buildTTF $
    full-designspace/instance_ufos/NotoSansGurungKhema-Regular.ufo.json
  operation = buildTTF
  args = --filter ...  --filter FlattenComponentsFilter --filter $
      DecomposeTransformedComponentsFilter
  fontmake_type = -u
  fontmake_args =  --verbose WARNING 
# Generating
# ../fonts/NotoSansGurungKhema/full/otf/NotoSansGurungKhema-Regular.otf
build $
    ../fonts/NotoSansGurungKhema/full/otf/NotoSansGurungKhema-Regular.otf: $
    buildOTF $
    full-designspace/instance_ufos/NotoSansGurungKhema-Regular.ufo.json
  operation = buildOTF
  args = --filter ...  --filter FlattenComponentsFilter --filter $
      DecomposeTransformedComponentsFilter
  fontmake_type = -u
  fontmake_args =  --verbose WARNING 
# Generating
# ../fonts/NotoSansGurungKhema/full/ttf/NotoSansGurungKhema-Regular.ttf
build $
    ../fonts/NotoSansGurungKhema/full/ttf/NotoSansGurungKhema-Regular.ttf: $
    autohint /tmp/tmpoom2eouz
  operation = autohint
  args = --fail-ok --auto-script --discount-latin
default $
    ../fonts/NotoSansGurungKhema/hinted/ttf/NotoSansGurungKhema-Regular.ttf $
    ../fonts/NotoSansGurungKhema/googlefonts/ttf/NotoSansGurungKhema-Regular.ttf $
    ../fonts/NotoSansGurungKhema/unhinted/otf/NotoSansGurungKhema-Regular.otf $
    ../fonts/NotoSansGurungKhema/full/otf/NotoSansGurungKhema-Regular.otf
